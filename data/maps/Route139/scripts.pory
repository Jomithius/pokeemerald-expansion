script Route139_EventScript_WorkerFiredUp{
    lock
    faceplayer
    msgbox("Thanks!\n
        I lost, but that was a great battle!\p
        I feel like I can focus on my work now!", MSGBOX_AUTOCLOSE)
    waitmessage
    applymovement(VAR_LAST_TALKED, Common_Movement_FaceOriginalDirection)
    waitmovement(0)
    release
    end
}

