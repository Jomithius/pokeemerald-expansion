script Route112_EventScript_RivalBattle{
    trainerbattle_no_intro(TRAINER_JOMITHIUS_2, Route112_EmoDefeat)
    return
}


text Route112_Text_Emo1{
    "JAMES: {PLAYER}…\n
    We meet again.\p
    My power has increased since we\n
    last battled.\p
    My eye… It now burns hotter than\n
    the FIERY PATH..\p
    This time, I, JOMITHIUS, will\n
    achieve victory!"
}

text Route112_EmoDefeat{
    "I'm in my abyss…"
}

text Route112_Text_Emo2{
    "JAMES: So victory still eludes\n
    me…\l
    You're a worthy adversary.\p
    Out of respect for your\n
    power, I'll give you this."
}

text Route112_Text_Emo3{
    "I'm going to challenge the\n
    LAVARIDGE GYM after exploring\l
    the DESERT.\p
    If you're going to head north,\n
    be careful.\p
    There's been a lot of weirdos\n
    lurking around here lately."
}

text Route112_Text_Emo4{
    "JAMES: .. What?\p
    Well, see ya, {PLAYER}.\n
    Next time, I won't lose."
}

movement Route112_Movement_EmoLeave{
    walk_right * 6
    walk_down * 2
    walk_right * 2
}

movement Route112_Movement_EmoLeaveWest{
    walk_down
    walk_right * 9
    walk_down * 3
}

movement Route112_PlayerWalkBack{
    lock_facing_direction
	walk_down
	delay_16
	unlock_facing_direction
}

movement Route112_PlayerWalkBackWest{
    lock_facing_direction
	walk_right
	delay_16
	unlock_facing_direction
}

